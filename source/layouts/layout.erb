<!DOCTYPE html>
<html lang="en">
<head>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <title><%= @title %></title>
  <meta name="description" content="<%= @description %>">
  <meta name="author" content="Jakob Dalsgaard-Hansen">

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link href="https://fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="stylesheet" href="stylesheets/normalize.css">
  <link rel="stylesheet" href="stylesheets/skeleton.css">
  <link rel="stylesheet" href="stylesheets/custom.css">

</head>
<body>

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <main class="container">

  <!-- Header containing logo and call to action
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <header class="row" id="header">
      <section class="four columns">
        <a href="./index.html">
          <%= image_tag "lawlogo.png", id: "header-logo", :relative => true %>
        </a>
      </section>

      <article class="eight columns" id="header-cta">
        <h4 class="text-focus-in">Ring nu for en gratis vurdering af din sag 
        <br>
        <span class="crimson text-focus-in"><a href="tel:52-10-10-33" class="phone">52 10 10 33</a></span>
        |
        <span class="crimson text-focus-in"><a href="tel:40-82-92-90" class="phone">40 82 92 90</a></span></h4>
      </article> 
    </header>

  <!-- div containing main section with description and sidebar
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <div class="row" id="main-section">


      <!-- sidebar with CTA and list of cases -->

      <aside class="four columns" id="sidebar">
        <form id="ctabar">

          <label for="name">Navn</label>
          <input class="u-full-width" type="text" placeholder="Dit navn" name="name">

          <label for="email">E-mail</label>
          <input class="u-full-width" type="email" name="email" placeholder="Din e-email">

          <label for="message">Din besked</label>
          <textarea class="u-full-width" name="message" placeholder="Beskriv din sag">
          </textarea>

          <input type="submit" class="ctabutton" value="Send besked">

        </form>

        <section id="expertise">
          <%= link_to "Forsvarsadvokat", "/index.html", class: "button area navbar topbar", :relative => true %>
          <%= link_to "Spirituskørsel", "/spirituskoersel.html", class: "button area navbar", :relative => true %>
          <%= link_to "Vold", "/vold.html", class: "button area navbar", :relative => true %>
          <%= link_to "Narkotika", "/narkotika.html", class: "button area navbar", :relative => true %>
          <%= link_to "Tyveri og røveri", "/tyveri.html", class: "button area navbar", :relative => true %>
          <%= link_to "Erhvervskriminalitet", "/erhverv.html", class: "button area navbar", :relative => true %>
          <%= link_to "Trafikforseelser", "/trafikforseelser.html", class: "button area navbar", :relative => true %>
          <%= link_to "Kontakt", "/kontakt.html", class: "button area navbar", :relative => true %>
        </section>
      </aside>

      <!-- main section 
      –––––––––––––––––––––––––––––––––––––––––––––––––– -->
      <section class="eight columns" id="content-bar">

       <%= yield %>

      </section>


    </div>
  </main>

  <!-- Footer containing disclaimer and contact information
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <footer>
      <section>
        <p class="fineprint">Vi repræsenterer klienter i Aalborg Kommune, Hjørring Kommune, 
        Frederikshavn Kommune, Brønderslev Kommune, Jammerbugt Kommune,
        Thisted Kommune, Morsø Kommune, Vesthimmerland Kommune, 
        Rebild, Mariagerfjord Kommune, og resten af Danmark.</p>

        <p class="fineprint">Ghiladi &amp; Dalsgaard Advokatfirma I/S <br>
        CVR-nummer: 36 21 75 37</p>
      </section>
    </footer>
  

<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

